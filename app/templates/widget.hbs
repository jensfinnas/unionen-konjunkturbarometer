<!-- SUB GROUP MODAL -->
{{#each groups}}
  {{#each subgroups}}
    <div class="modal fade" id="modal-{{../id}}-{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span class="">Stäng</span> <span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">
              <table><tr>
              
              <td>
                <span class="icon-arrow {{outlook.className}} outlook"></span>
              </td>
              <td>
                {{dictionary name 'insentence' false}} 
                inom 
                {{dictionary ../name 'determined' true}}
              </td>
              </tr></table>
              </h4>
          </div>
          <div class="modal-body">

            <div class="history-chart" data-group="{{../name}}" data-subgroup="{{name}}" data-category="{{../../category}}">
              <div class="section summary">
                <table>
                  <tr>
                    <td><!--<span class="icon-arrow {{outlook.className}} outlook"></span>--></td>
                    <td><div class="sentence"></div></td>
                  </tr>
                </table>
              </div>
              <div class="section history">
                <h5></h5>
                <div class="chart-intro">Var sjätte månad frågar vi våra medlemmar om deras syn på framtiden. Så här har förväntningarna på <span class="group-name"></span> förändrats sedan 2011.</div>
                <div class="chart"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{/each}}

<!-- ACCORDION -->
<div class="panel-group" id="accordion">
  {{#each groups}}
  <div class="panel panel-default">
    <!-- GROUP HEADING -->
    <div class="panel-heading collapsed" data-toggle="collapse" data-parent="#accordion" href="#{{id}}">
      <h4 class="panel-title">
        <table><tr>
          <td>
            <span class="icon-arrow {{outlook.className}} outlook"></span>
          </td> 
          <td class="title">{{name}}</td>
          <td class="open-close">
            <span class="icon-plus"></span>
            <span class="icon-minus"></span>
          </td>
        </tr></table>
      </h4>
    </div>
    <!-- GROUP BODY -->
    <div id="{{id}}" class="panel-collapse collapse {{show}}">
      <div class="panel-body">
        <!-- Group history chart -->
        <div class="history-chart" data-group="{{name}}" data-category="{{../category}}">
          <div class="section summary">
            <table>
              <tr>
                <td><!--<span class="icon-arrow {{outlook.className}} outlook"></span>--></td>
                <td><div class="sentence"></div></td>
              </tr>
            </table>
          </div>
          <div class="section history">
            <h5>Över tid</h5>
            <div class="chart-intro">Var sjätte månad frågar vi våra medlemmar om deras syn på framtiden. Så här har förväntningarna på <span class="group-name"></span> förändrats sedan 2011.</div>
            <div class="chart"></div>
          </div>
          <div class="section subgroups">
            <h5>Nyckeltal</h5>
            {{#each subgroups }}
            <div class="subgroup" data-toggle="modal" data-target="#modal-{{../id}}-{{id}}">
              <span class="icon-arrow {{outlook.className}} outlook"></span>
              <span class="name">{{name}}</span>
            </div>
            {{/each}}
          </div>
        </div>
        <!-- Group share -->
        <div class="share">
          <a class="btn btn-xs btn-default" href="?show={{../id}}&cat={{../category}}">Dela mig</a>
        </div>


